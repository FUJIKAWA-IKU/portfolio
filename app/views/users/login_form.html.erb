<div class="wrapper">
  <% if @error_message %>
    <%= @error_message %>
  <% end %>
  <ul class="forms">
    <%= form_for(@user, url:{controller: 'users', action: 'login'}) do |f| %>
      <li>
        <%= f.label :email, "email" %>
        <%= f.text_field :email, class: "form", id: "spec_email" %>
      </li>
      <li>
        <%= f.label :password, "パスワード" %>
        <%= f.text_field :password, class: "form", id: "spec_password" %>
      </li>
      <div class="buttonbox">
        <%= f.submit "ログイン", class: "button" %>
      </div>
    <% end %>
  </ul>
  <div class="guest-loginwrapper">
    <div class="guest-login">
    <p>ゲストログイン</p>
    <p>email : guest@example.com</p>
    <p>password : guest</p>
    </div>
  </div>
</div>
