<header>
  <ul class="header-list" id="spec_within">
    <% if @current_user %>
      <li>
        <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
      </li>
    <% end %>
    <% if session[:user_id] %>
      <li>
        <%= link_to("つぶやく", "/posts/new", id: "spec_new") %>
      </li>
      <li>
        <%= link_to("つぶやき一覧", "/posts") %>
      </li>
      <li>
        <%= link_to("ログアウト", "/logout", {method: "post"}) %>
      </li>
    <% else %>
      <li>
        <%= link_to("新規登録", "/users/new") %>
      </li>
      <li>
        <%= link_to("ログイン", "/users/login") %>
      </li>
    <% end %>
  </ul>
</header>